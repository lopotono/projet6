<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN" "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>
    <package name="default" extends="struts-default">
        <!-- Action par dÃ©faut -->
        <default-action-ref name="index" />

        <!-- Results globaux -->
        <global-results>
            <result name="error">error.jsp</result>
        </global-results>

        <!-- Action "index" -->
        <action name="index">
            <result>index.jsp</result>
        </action>

        <!-- Action listant les topos -->
        <action name="topos_list"
                class="org.projet.escalade.webapp.action.ListeToposAction" method="doList">
            <result>topos/list.jsp</result>
        </action>
                        
        <!-- Action listant les sites -->
        <action name="sites_list" 
        		class="org.projet.escalade.webapp.action.ListeSitesAction" method="doListSites">
        	<result>sites/list.jsp</result>
        </action>
        
        <!-- Actions Login/Logout -->
        <action name="login" class="org.projet.escalade.webapp.action.LoginAction" method="doLogin">
        	<result name="input">login.jsp</result>
        	<result name="success" type="redirectAction">index.jsp</result>
        </action>
        <action name="logout" class="org.projet.escalade.webapp.action.LoginAction" method="doLogout">
        	<result type="redirectAction">index.jsp</result>
        </action>                       
    </package>
</struts>